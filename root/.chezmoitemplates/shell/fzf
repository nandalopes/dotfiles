### FZF fuzzy finder
# fzf/install --xdg --all --no-update-rc \
#   --no-fish
[ -f "${XDG_CONFIG_HOME:-$HOME/.config}"/fzf/fzf. {{- $shell }} ] && \
  source "${XDG_CONFIG_HOME:-$HOME/.config}"/fzf/fzf. {{- $shell }}

